<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZeroResourceLayout">
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="loadingView" format="reference" />
    </declare-styleable>

    <declare-styleable name="ZeroAspectRatioLayout">
        <attr name="aspectMaxHeight" format="dimension" />
        <attr name="aspectRatio" format="float" />
        <attr name="layout_widthRatio" format="float" />
        <attr name="layout_heightRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="ZeroSlideBar">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="slideBarFocusTextColor" format="color" />
        <attr name="slideBarFocusBackgroundColor" format="color" />
    </declare-styleable>
</resources>