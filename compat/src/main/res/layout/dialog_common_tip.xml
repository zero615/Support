<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackgroundFloating"
    android:gravity="center"
    android:minWidth="96dp"
    android:minHeight="96dp"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/tip_loading"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tip_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_common_notify_done"
        app:tint="?attr/colorAccent"
        app:tintMode="src_in" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tip_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_common_notify_error"
        app:tint="?attr/colorAccent"
        app:tintMode="src_in" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tip_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_common_notify_info"
        app:tint="?attr/colorAccent"
        app:tintMode="src_in" />

    <TextView
        android:id="@+id/tip_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp" />
</LinearLayout>